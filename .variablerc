if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

# Local binaries
PATH="$PATH:~/.local/bin"
PATH="$PATH:~/go/bin"

# Android PATH variable
BUILD_VER=`ls --color=never ~/Android/Sdk/build-tools/ | tail -n 1`
PATH="$PATH:~/Android/Sdk/platform-tools"
PATH="$PATH:/opt/android-studio/jbr/bin"
PATH="$PATH:~/Android/Sdk/cmdline-tools/latest/bin"
PATH="$PATH:~/Android/Sdk/emulator"
PATH="$PATH:~/Android/Sdk/build-tools/$BUILD_VER"

# accelerate the process of re-build LineageOS
# https://wiki.lineageos.org/emulator
export USE_CCACHE=1
export CCACHE_EXEC=/usr/bin/ccache

# for git editor
export EDITOR="nvim"

export LD_LIBRARY_PATH="/usr/local/lib"

export PATH
